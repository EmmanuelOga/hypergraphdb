<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0">
   <id>final</id>
   <formats>
      <format>zip</format>
      <format>tar.gz</format>
   </formats>
   <fileSets>
     <fileSet>
       <directory>../core</directory>
       <outputDirectory>/</outputDirectory>
       <includes>
	 <include>readme.html</include>
	 <include>LicenseInformation</include>
	 <include>ThirdPartyLicensing/*</include>
       </includes>
     </fileSet>
     <fileSet>
       <directory>../core/target/site/apidocs</directory>
       <outputDirectory>apidocs/hgdb</outputDirectory>
       <includes>
	 <include>**</include>
       </includes>
     </fileSet>
     <fileSet>
       <directory>../p2p/target/site/apidocs</directory>
       <outputDirectory>apidocs/hgdbp2p</outputDirectory>
       <includes>
	 <include>**</include>
       </includes>
     </fileSet>
     <fileSet>
       <directory>../storage/bdb-je/target/site/apidocs</directory>
       <outputDirectory>apidocs/hgbdbje</outputDirectory>
       <includes>
	 <include>**</include>
       </includes>
     </fileSet>
     <fileSet>
       <directory>../storage/bdb-native/target/site/apidocs</directory>
       <outputDirectory>apidocs/hgbdbnative</outputDirectory>
       <includes>
	 <include>**</include>
       </includes>
     </fileSet>
     <fileSet>
       <directory>../storage/bdb-native/target/site/apidocs</directory>
       <outputDirectory>apidocs/hgbdbnative</outputDirectory>
       <includes>
	 <include>**</include>
       </includes>
     </fileSet>
     <fileSet>
       <directory>../storage/bdb-native/native</directory>
       <outputDirectory>lib/native</outputDirectory>
     </fileSet>
   </fileSets>
<moduleSets>
  <moduleSet>
    <includes>
      <include>org.hypergraphdb:hgdb</include>
      <include>org.hypergraphdb:hgdbp2p</include>
      <include>org.hypergraphdb:hgbdbje</include>
      <include>org.hypergraphdb:hgbdbnative</include>
    </includes>
    <binaries>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <includeDependencies>true</includeDependencies>
      <!--
      <dependencySets>
	    <dependencySet/>
      </dependencySets>
      -->
    </binaries>
    <sources>
      <includeModuleDirectory>true</includeModuleDirectory>
      <outputDirectoryMapping>src/${module.artifactId}</outputDirectoryMapping>
      <fileSets>
	<fileSet>
	  <outputDirectory>/</outputDirectory>
	  <directory>src</directory>
	  <excludes>
	    <exclude>cpp/**</exclude>
	  </excludes>
	</fileSet>
      </fileSets>
    </sources>
  </moduleSet>
</moduleSets>
</assembly>
