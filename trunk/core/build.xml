<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." name="HyperGraphDB Core" default="core-jar">
	<description>HyperGraphDB Core Build File</description>
    
    <property name="build" value="build"/>
    <property name="jars" value="."/>
    <property name="debug" value="on"/>
	<property name="jar-name" value="hypergraphdb.jar"/>
	
	<!-- classpath for compiling-->
	<path id="core-classpath">
		<fileset dir="jars">
			<include name="**/*.jar" />
		</fileset>
		<pathelement path="${java.class.path}" />
	</path>

    <target name="init">
		<mkdir dir="${build}"/>
    </target>
    
	<target name="compile" depends="init" description="Compile the HyperGraphDB Core Sources">
		<javac source="1.5" classpathref="core-classpath" debug="${debug}" destdir="${build}" srcdir="src"/>
		<copy todir="${build}/">
			<fileset dir="src/config">
				<include name="**" />
			</fileset>
		</copy>        
	</target>

	<target name="core-jar" depends="compile" description="Create HyperGraphDB Core Jar file.">
		<jar basedir="${build}" jarfile="${jars}/${jar-name}">
			<exclude name="**/*.jar" />
			<exclude name="**/*.bak" />
		</jar>
	</target>

	<target description="clean up" name="clean">
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}" />
        <delete file="hypergraphdb.jar"/>
	</target>

</project>
