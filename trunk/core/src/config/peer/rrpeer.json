/*
 * A simple configuration for running a peer that acts as
 * a rendez-vous and a relay. 
 */
{
"threadPoolSize"    : 20,
"interfaceType"	: "org.hypergraphdb.peer.jxta.JXTAPeerInterface",

"jxta"		:
{
	"user" : "user",
	"password" : "pwd",
	"jxtaDir"	: "./hgdb/.jxta",
	"peerName"	: "MainRendezVous",
	"peerGroup"	: "HGDBNET",
                   
	"mode"		: "RENDEZVOUS_RELAY",
	"tcp"		:
	{
		"enabled"	: true,
		"port"		: 9702
	},
	"http"		:
	{
		"enabled"	: true,
		"port"		: 9703
	}
}
}
